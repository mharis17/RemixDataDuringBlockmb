        @notice Queries the approval status of an operator for a given owner.
        @param _owner     The owner of the tokens
        @param _operator  Address of authorized operator
        @return           True if the operator is approved, false if not
    */
    function isApprovedForAll(
        address _owner,
        address _operator
    ) external view returns (bool);
}



contract Marketplace is  EIP712 {
       uint256 public marketplaceFEE;
    address public marketOwner;
    bool public isPaused;
     



    constructor() EIP712(SIGNING_DOMAIN,SIGNATURE_VERSION) {
        marketOwner = msg.sender;
    }

    struct Order {
        uint256 tokenId; //nft id 
        uint256 ethPrice;// sale 
        uint256 createdTime; // current blocktimestamp
        address tokenAddress;// nft contract address
        bytes signature; // byte32 hash signed by the owner 
    }

    // **********   offer section   **********

    struct Offer {
        uint256 tokenId;
        uint256 Price;
        uint256 time;
        address tokenAddress;
        address coinAddress;
        bytes signature;
    }

    struct AuctionData {
        uint256 tokenId;
        uint256 minBid; // Selling Price
        uint256 expiryTime;
        uint256 createdTime;
        address tokenAddress;
        address coinAddress; // can be eth or any Erc-20 token
        bytes signature;
    }

    struct BidData {
        uint256 tokenId;
        uint256 tokenPrice;
        uint256 time;
        address tokenAddress;
        address coinAddress;
        bytes signature;
    }

    struct Status {
        bool isCancel;
    }

    struct royalty {
        address contractADDress;
        address owner;
        uint256 amount;
    }

    // ************************* Events ************

    event buyOrderSuccessfull(Order order, address buyer, address seller);
    event buyOrderCancel(Order order, address seller);
    event offerAccepted(Offer offer, address buyer, address seller);
    event offerCancel(Offer offer, address buyer);
    event bidAccepted(
        BidData bid,
        AuctionData auction,
        address buyer,
        address seller
    );
    event bidCancel(BidData bid, address buyer);
    event auctionCancel(AuctionData auction, address seller);

    event collectionRoyalty(
        address contractAddress,
        address owner,
        uint256 percentage
    );

    // ************************* Mapping ************

    mapping(bytes => Status) public sigValidation;

    mapping(address => royalty) public Royalties;

    // ************************* Modifiers ************

    modifier onlyOwner() {
        require(
            msg.sender == marketOwner,
            "Only owner is allowed to perform this action"
        );
        _;
    }
    modifier checkStatus() {
        require(isPaused == false, "contract is stopped");
        _;
    }

    //...............................ROYALTIES SECTION............................................................................................................................................

    // for royalties

    function setRoyaltie(
        address _tokenAddress,
        uint _royaltyAmount
    ) public checkStatus {
        require(
            _royaltyAmount <= 10000000000000000000,
            "please enter value beteen 0-10 "
        );

        Ownable tokenRegistry = Ownable(_tokenAddress);
        require(tokenRegistry.owner() == msg.sender, "only owner");

        Royalties[_tokenAddress].contractADDress = _tokenAddress;
        Royalties[_tokenAddress].owner = msg.sender;
        Royalties[_tokenAddress].amount = _royaltyAmount;
        emit collectionRoyalty(_tokenAddress, msg.sender, _royaltyAmount);
    }

    // ************************* set market Owner and fees ************

    // percentage of sale that goes to marketplace (e.g: 2.5)

    function setmarketplaceFEE(uint256 _newPrice) public onlyOwner {
        marketplaceFEE = _newPrice;
    }

    function setmarketOwner(address _marketOwner) public onlyOwner {
        marketOwner = _marketOwner;
    }

    function flipPauseStatus() public onlyOwner {
        isPaused = !isPaused;
    }

    // ************************* Recover Function ************

    function recoverOrder(Order calldata order) public view returns (address) {
        bytes32 digest = _hashTypedDataV4(
            keccak256(
                abi.encode(
                    keccak256(
                        "Order(uint256 tokenId,uint256 ethPrice,uint256 createdTime,address tokenAddress)"
                    ),
                    order.tokenId,
                    order.ethPrice,
                    // order.tokenPrice,
                    order.createdTime,
                    order.tokenAddress
                    // order.coinAddress
                )
            )
        );
        address signer = ECDSA.recover(digest, order.signature);
        return signer;
    }

    function recoverOffer(Offer calldata offer) public view returns (address) {
        bytes32 digest = _hashTypedDataV4(
            keccak256(
                abi.encode(
                    keccak256(
                        "Offer(uint256 tokenId,uint256 Price,uint256 time,address tokenAddress,address coinAddress)"
                    ),
                    offer.tokenId,
                    offer.Price,
                    offer.time,
                    offer.tokenAddress,
                    offer.coinAddress
                )
            )
        );
        address signer = ECDSA.recover(digest, offer.signature);
        return signer;
    }

    function recoverAuction(
        AuctionData calldata auction
    ) public view returns (address) {
        bytes32 digest = _hashTypedDataV4(
            keccak256(
                abi.encode(
                    keccak256(
                        "AuctionData(uint256 tokenId,uint256 minBid,uint256 expiryTime,uint256 createdTime,address tokenAddress,address coinAddress)"
                    ),
                    auction.tokenId,
                    auction.minBid,
                    auction.expiryTime,
                    auction.createdTime,
                    auction.tokenAddress,
                    auction.coinAddress
                )
            )
        );
        address signer = ECDSA.recover(digest, auction.signature);
        return signer;
    }

    function recoverBid(BidData calldata bid) public view returns (address) {
        bytes32 digest = _hashTypedDataV4(
            keccak256(
                abi.encode(
                    keccak256(
                        "BidData(uint256 tokenId,uint256 tokenPrice,uint256 time,address tokenAddress,address coinAddress)"
                    ),
                    bid.tokenId,
                    bid.tokenPrice,
                    bid.time,
                    bid.tokenAddress,
                    bid.coinAddress
                )
            )
        );
        address signer = ECDSA.recover(digest, bid.signature);
        return signer;
    }

    // *************************  listing CONTRACT ************

    function acceptOrder(Order calldata order) public payable checkStatus {
        // erc20 object
        // IERC20 Token = IERC20(order.coinAddress);
        IERC721 tokenRegistry = IERC721(order.tokenAddress);
        // getting values for royalties
        uint256 royaltyAmount = Royalties[order.tokenAddress].amount;
        address owner = Royalties[order.tokenAddress].owner;

        // Check order creator is the asset owner
        address tokenOwner = tokenRegistry.ownerOf(order.tokenId);
        require(
            tokenOwner == recoverOrder(order),
            "Marketplace: Only the asset owner can create orders"
        ); // we will decide it later
        require(tokenOwner != msg.sender, "Marketplace: unauthorized sender");
        //check orderStatus
        require(
            sigValidation[order.signature].isCancel == false,
            "order not active"
        );

        // if (order.coinAddress == 0x0000000000000000000000000000000000000000) {
            ethpayment(order.ethPrice, royaltyAmount, owner, tokenOwner);
        // } 
        
        // else {
        //     require(
        //         Token.balanceOf(msg.sender) >= order.tokenPrice,
        //         "Marketplace: invalid price"
        //     );

        //     tokenPayment(
        //         Token,
        //         order.tokenPrice,
        //         royaltyAmount,
        //         tokenOwner,
        //         msg.sender,
        //         owner
        //     );
        // }

        tokenRegistry.safeTransferFrom(tokenOwner, msg.sender, order.tokenId);

        sigValidation[order.signature].isCancel = true;

        emit buyOrderSuccessfull(order, msg.sender, tokenOwner);
    }

    function ethpayment(
        uint256 ethPrice,
        uint _royaltyAmount,
        address owner,
        address _nftowner
    ) internal {
        require(ethPrice > 0, "not enough funds send"); // we should also use _tokenPrice > 0
        require(ethPrice == msg.value, "Marketplace: invalid price");

        uint256 royaltyCut = (msg.value * _royaltyAmount) / 100000000000000000000; // check wheter we can use
        uint256 MP_FEE = (msg.value * marketplaceFEE) / 100000000000000000000;
        uint256 sellerCut = msg.value - (royaltyCut + MP_FEE);

        if (_royaltyAmount == 0) {
            payable(_nftowner).transfer(sellerCut);
            payable(marketOwner).transfer(MP_FEE);
        } else {
            payable(_nftowner).transfer(sellerCut);

            payable(owner).transfer(royaltyCut);

            payable(marketOwner).transfer(MP_FEE);
        }
    }

    function tokenPayment(
        IERC20 Token,
        uint256 _tokenPrice,
        uint256 _royaltyAmount,
        address _nftowner,
        address buyer,
        address nftCtOwner
    ) internal {
        uint256 royaltyCut = (_tokenPrice * _royaltyAmount) / 100000000000000000000;
        uint256 MP_FEE = (_tokenPrice * marketplaceFEE) / 100000000000000000000;
        uint256 sellerCut = _tokenPrice - (royaltyCut + MP_FEE);

        if (_royaltyAmount == 0) {
            Token.transferFrom(buyer, _nftowner, sellerCut);
            Token.transferFrom(buyer, marketOwner, MP_FEE);
        } else {
            Token.transferFrom(buyer, _nftowner, sellerCut);
            Token.transferFrom(buyer, nftCtOwner, royaltyCut);
            Token.transferFrom(buyer, marketOwner, MP_FEE);
        }
    }

    function cancelOrder(
        Order calldata order
    ) public checkStatus returns (bool) {
        require(
            sigValidation[order.signature].isCancel == false,
            "order already cancel"
        ); //  we think this is optional as order is different from each other due to time but this is extra security we can rethink about this

        require(msg.sender == recoverOrder(order), "only owner");

        sigValidation[order.signature].isCancel = true;

        emit buyOrderCancel(order, msg.sender);

        return sigValidation[order.signature].isCancel;
    }


    //******************************************. Oferr section ***************************

    function acceptOffer(Offer calldata offer) public checkStatus {
        IERC721 tokenRegistry = IERC721(offer.tokenAddress);
        IERC20 Token = IERC20(offer.coinAddress);
        require(
            sigValidation[offer.signature].isCancel == false,
            "offer not active"
        );
        require(
            msg.sender == tokenRegistry.ownerOf(offer.tokenId),
            "only owner"
        );
        require(
            Token.balanceOf(recoverOffer(offer)) >= offer.Price,
            "not enough token balance sent"
        );

        // getting values for royalties
        uint256 royaltyAmount = Royalties[offer.tokenAddress].amount;
        address owner = Royalties[offer.tokenAddress].owner;

        //sending amount to diifferent accounts
        tokenPayment(
            Token,
            offer.Price,
            royaltyAmount,
            msg.sender,
            recoverOffer(offer),
            owner
        );
        // sending token
        tokenRegistry.safeTransferFrom(
            msg.sender,
            recoverOffer(offer),
            offer.tokenId
        );

        sigValidation[offer.signature].isCancel = true;

        emit offerAccepted(offer, recoverOffer(offer), msg.sender);
    }

    function cancelOffer(
        Offer calldata offer
    ) public checkStatus returns (bool) {
        require(
            sigValidation[offer.signature].isCancel == false,
            "offer already cancel"
        ); //  we think this is optional as order is different from each other due to time but this is extra security we can rethink about this
        require(msg.sender == recoverOffer(offer), "only owner");
        sigValidation[offer.signature].isCancel = true;
        emit offerCancel(offer, msg.sender);

        return sigValidation[offer.signature].isCancel;
    }

    ////******************************************. Auction section ***************************

    // Auction section

    function acceptBid(
        AuctionData calldata auction,
        BidData calldata biD
    ) public checkStatus {
        IERC20 Token = IERC20(auction.coinAddress);
        IERC721 tokenRegistry = IERC721(auction.tokenAddress);
        address tokenOwner = tokenRegistry.ownerOf(auction.tokenId);
        require(
            sigValidation[auction.signature].isCancel == false,
            "auction not active"
        );
        require(
            sigValidation[biD.signature].isCancel == false,
            "bid not active1"
        );
        require(block.timestamp <= auction.expiryTime, "auction expired");
        //check auctionrStatus
        // Auction time ka reuire bhi lagna ha plz review
        require(
            tokenOwner == msg.sender && tokenOwner == recoverAuction(auction),
            "Marketplace: Only the asset owner can create"
        );
        require(
            Token.balanceOf(recoverBid(biD)) >= biD.tokenPrice,
            "dont have enough tokens"
        ); // rethink whether we should add tokenAmount in bid structure or not
        uint256 royaltyAmount = Royalties[auction.tokenAddress].amount;
        address owner = Royalties[auction.tokenAddress].owner;

        tokenPayment(
            Token,
            biD.tokenPrice,
            royaltyAmount,
            msg.sender,
            recoverBid(biD),
            owner
        );

        tokenRegistry.safeTransferFrom(
            recoverAuction(auction),
            recoverBid(biD),
            auction.tokenId
        );

        sigValidation[auction.signature].isCancel = true;
        sigValidation[biD.signature].isCancel = true;

        emit bidAccepted(biD, auction, recoverBid(biD), msg.sender);
    }

    //cancel auction
    function cancelAuction(
        AuctionData calldata auction
    ) public checkStatus returns (bool) {
        require(
            sigValidation[auction.signature].isCancel == false,
            "order not active"
        );

        require(
            msg.sender == recoverAuction(auction),
            "Marketplace: Only the asset owner can cancel auction"
        );

        sigValidation[auction.signature].isCancel = true;

        emit auctionCancel(auction, msg.sender);

        return sigValidation[auction.signature].isCancel;
    }

    //cancel auction
    function cancelBid(BidData calldata bid) public checkStatus returns (bool) {
        require(
            sigValidation[bid.signature].isCancel == false,
            "order not active"
        );

        require(
            msg.sender == recoverBid(bid),
            "Marketplace: Only the bider can cancel "
        );

        sigValidation[bid.signature].isCancel = true;

        emit bidCancel(bid, msg.sender);

        return sigValidation[bid.signature].isCancel;
    }

    function withdraw() public onlyOwner {
        uint256 totalbalance = address(this).balance;
        (bool hq, ) = payable(marketOwner).call{value: totalbalance}("");
        require(hq);
    }
